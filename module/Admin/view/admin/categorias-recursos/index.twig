{% extends 'layout/layout_admin.twig' %}

{% block content %}

    <div class="alert alert-normal">
        <a class="btn btn-info" href="/admin/categoriasrecursos/create">Novo</a>
    </div>

    <table class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>#</th>
                <th>Categoria</th>
                <th>Descrição</th>
                <th style="width: 62px;"></th>
            </tr>
        </thead>
        <tbody>
        {% for data in resultSet|to_array %}
            <tr>
                <th scope="row">{{ data.ctrId }}</th>
                <td>{{ data.ctrNome }}</td>
                <td>{{ data.ctrDescricao }}</td>
                <td>
                    <a class="btn btn-xs btn-warning" href="/admin/categoriasrecursos/update/{{ data.ctrId }}"><i class="fa fa-edit"></i></a>
                    <a class="btn btn-xs btn-danger" data-id="{{ data.ctrId }}" href="#"><i class="fa fa-remove"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock content %}

{% block inline %}

    <script>
        $(".btn-danger").click(function(e){
            e.preventDefault();
            bootbox.confirm("Têm certeza que deseja excluir esse registro?", function(result) {
                if(result) {
                    window.location.href = '/admin/categoriasrecursos/delete/' + $(e.currentTarget).data('id');;
                }
            });
        });
    </script>

{% endblock inline %}